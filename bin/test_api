#!/usr/bin/python

import os
import sys
import time
import json
import pprint
import logging
import argparse
import requests
from tendo import singleton

sys.path.append(os.path.dirname(sys.argv[0]) + '/../lib')

me = singleton.SingleInstance()
pp = pprint.PrettyPrinter(indent=4)

parser = argparse.ArgumentParser(description = 'Get some data from web API')
parser.add_argument('-v', '--verbose', action='store_true', help="Print debug to terminal, not just to log file")
args = parser.parse_args()

url="http://api.lorawan.sk"

wret = requests.get(url, timeout=7)
print "Status code: " + str(wret.status_code)
pprint(wret.content)
